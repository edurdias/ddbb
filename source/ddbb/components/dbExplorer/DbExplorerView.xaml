<UserControl x:Class="ddbb.App.Components.DbExplorer.DbExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:t="clr-namespace:ddbb.App.Contracts.Domain;assembly=ddbb.App.Contracts">
	<TreeView x:Name="Connections">
		<TreeView.Resources>
			<ItemContainerTemplate DataType="{x:Type t:IConnection}">
				<TextBlock x:Name="Name" Text="{Binding Path=Name}"></TextBlock>
			</ItemContainerTemplate>
			<HierarchicalDataTemplate DataType="{x:Type t:IConnection}" ItemsSource="{Binding Databases}">
				<StackPanel Orientation="Horizontal">
					<TextBlock x:Name="Name" Text="{Binding Path=Name}"></TextBlock>
				</StackPanel>
			</HierarchicalDataTemplate>
			<HierarchicalDataTemplate DataType="{x:Type t:IDatabase}" ItemsSource="{Binding Collections}">
				<StackPanel Orientation="Horizontal">
					<TextBlock x:Name="Name"></TextBlock>
				</StackPanel>
			</HierarchicalDataTemplate>
		</TreeView.Resources>

	</TreeView>
</UserControl>
