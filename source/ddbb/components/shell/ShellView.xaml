<UserControl
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
            x:Class="ddbb.App.Components.Shell.ShellView" 
            VerticalAlignment="Stretch" 
            HorizontalAlignment="Stretch" MinWidth="1024" MinHeight="768">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="200"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="DbExplorer"></ContentControl>
        <GridSplitter 
            HorizontalAlignment="Right" 
            VerticalAlignment="Stretch" 
            ResizeBehavior="PreviousAndNext" 
            Grid.Column="1"
            Width="4"/>
        <ContentControl Grid.Column="2" x:Name="ViewManager"></ContentControl>
    </Grid>
</UserControl>
